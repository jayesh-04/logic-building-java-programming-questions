Find the maximum and minimum element in an array

public class Main {
    public static void main(String[] args) {
        int[] A = {24, 8, 16, 62, 3, 11};

        int max = A[0];
        int min = A[0];

        for (int x : A) {
            if (x > max) max = x;
            if (x < min) min = x;
        }

        System.out.println("Maximum: " + max);
        System.out.println("Minimum: " + min);
    }
}
