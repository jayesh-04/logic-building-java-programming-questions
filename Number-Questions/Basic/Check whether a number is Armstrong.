Check whether a number is Armstrong.

public class Main {
	public static void main(String[] args) {
		int num  = 1634;
		int temp=num;
		int count=0;
		while(temp!=0) {
			count++;
			temp/=10;
		}
		temp=num;
		int sum=0;
		while(temp!=0) {
		    int temp2 = 1;
		    int rem = temp%10;
			for(int i=1; i<=count;i++) {
				temp2=temp2*rem;
			}
			sum=sum+temp2;
			temp=temp/10;
		}
		System.out.println(sum);
		if(sum==num){
		    System.out.print("Armstrong Number");
		}else{
		    System.out.print("Not Armstrong Number");
		}
	}
}
