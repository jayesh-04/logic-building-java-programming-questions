Find the largest digit in a number.

public class Main {
	public static void main(String[] args) {
		int num=-123;
		if(num<0){
		    num=num*(-1);
		}
		int large = num%10;
		while(num!=0) {
        int rem = num%10;
        if(rem>large){
            large=rem;
        }
        num=num/10;
		}
		System.out.println(large);
	}
}
